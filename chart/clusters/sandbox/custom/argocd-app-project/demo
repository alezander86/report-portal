apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: demo
  namespace: argocd
spec:
  clusterResourceWhitelist:
    - group: ''
      kind: Namespace
  description: CD pipelines for demo
  destinations:
    - namespace: demo-*
      server: https://kubernetes.default.svc
  namespaceResourceBlacklist:
    - group: ''
      kind: ResourceQuota
    - group: ''
      kind: LimitRange
    - group: ''
      kind: NetworkPolicy
  namespaceResourceWhitelist:
    - group: '*'
      kind: '*'
  roles:
    - description: Users for demo tenant
      groups:
        - ArgoCD-demo-users
      name: developer
      policies:
        - p, proj:demo:developer, applications, create, demo/*, allow
        - p, proj:demo:developer, applications, delete, demo/*, allow
        - p, proj:demo:developer, applications, get, demo/*, allow
        - p, proj:demo:developer, applications, override, demo/*, allow
        - p, proj:demo:developer, applications, sync, demo/*, allow
        - p, proj:demo:developer, applications, update, demo/*, allow
        - p, proj:demo:developer, repositories, create, demo/*, allow
        - p, proj:demo:developer, repositories, delete, demo/*, allow
        - p, proj:demo:developer, repositories, update, demo/*, allow
        - p, proj:demo:developer, repositories, get, demo/*, allow
  sourceNamespaces:
    - demo
  sourceRepos:
    - '*'
