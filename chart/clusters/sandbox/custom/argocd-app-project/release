apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: release
  namespace: argocd
spec:
  clusterResourceWhitelist:
    - group: ''
      kind: Namespace
  description: CD pipelines for release
  destinations:
    - namespace: release-*
      server: https://kubernetes.default.svc
  namespaceResourceBlacklist:
    - group: ''
      kind: ResourceQuota
    - group: ''
      kind: LimitRange
    - group: ''
      kind: NetworkPolicy
  namespaceResourceWhitelist:
    - group: '*'
      kind: '*'
  roles:
    - description: Users for release tenant
      groups:
        - ArgoCD-release-users
      name: developer
      policies:
        - p, proj:release:developer, applications, create, release/*, allow
        - p, proj:release:developer, applications, delete, release/*, allow
        - p, proj:release:developer, applications, get, release/*, allow
        - p, proj:release:developer, applications, override, release/*, allow
        - p, proj:release:developer, applications, sync, release/*, allow
        - p, proj:release:developer, applications, update, release/*, allow
        - p, proj:release:developer, repositories, create, release/*, allow
        - p, proj:release:developer, repositories, delete, release/*, allow
        - p, proj:release:developer, repositories, update, release/*, allow
        - p, proj:release:developer, repositories, get, release/*, allow
  sourceNamespaces:
    - release
  sourceRepos:
    - '*'
